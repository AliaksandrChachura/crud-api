{
 "compilerOptions": {
   "target": "es2018",
   "module": "NodeNext",
   "strict": true,
   "esModuleInterop": true,
   "skipLibCheck": true,
   "forceConsistentCasingInFileNames": true,
   "moduleResolution": "nodenext",
   "outDir": "./dist",
   "baseUrl": "./src",
   "paths": {
     "*": ["*", "src/*"]
   }
 },
 "include": ["src/*.ts"],
 "exclude": ["node_modules", "dist"]
}
